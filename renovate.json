{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],

  "timezone": "America/New_York",
  "schedule": ["before 10am on monday"],

  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Dependency Dashboard",

  "labels": ["dependencies", "renovate"],
  "commitMessagePrefix": "chore(deps):",

  "prConcurrentLimit": 3,

  "rust": {
    "enabled": true,
    "rangeStrategy": "update-lockfile"
  },

  "npm": {
    "enabled": true
  },

  "packageRules": [
    {
      "description": "Group all non-major Rust updates",
      "matchManagers": ["cargo"],
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "Rust dependencies",
      "automerge": true,
      "platformAutomerge": true
    },

    {
      "description": "Auto-merge patch updates for npm dev dependencies",
      "matchManagers": ["npm"],
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "platformAutomerge": true
    },

    {
      "description": "Separate and schedule major updates",
      "matchManagers": ["cargo", "npm"],
      "matchUpdateTypes": ["major"],
      "groupName": "Major dependency updates",
      "schedule": ["before 10am on the first day of the month"]
    }
  ]
}

